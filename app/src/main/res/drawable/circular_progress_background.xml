<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="270">
            <shape
                android:innerRadius="64dp"
                android:shape="ring"
                android:thickness="10dp"
                android:useLevel="true">
                <gradient
                    android:centerColor="@color/progress_background"
                    android:startColor="@color/progress_background"
                    android:endColor="@color/progress_background"
                    android:type="sweep" />
            </shape>
        </rotate>
    </item>
</layer-list>